{% extends "base.html.twig" %}
{% block titre %}Nouveau rendez-vous{% endblock %}
{% block contenu %}
        <div class='col-md-4'>
        <h3>Prise de rendez-vous</h3>
        <form action="prestation_prevue.html" method="POST">
            <div class="form-group">
                <label for="datePresta">Date à prévoir</label>
                <table>
                    <tr>
                        <td><input type="date" class="form-control" id="datePresta" name="datePresta" /></td>
                        <td><label for="heurePresta"> à </label></td>
                        <td><input type="time" class="form-control" id="heurePresta" name="heurePresta" /></td>
                        
                    </tr>
                </table>
                
                
            </div>
            <div class="form-group">
                <label for="typePresta">Type de prestation</label>
                <select name="typePresta" id="typePresta" name="typePresta">
                    <option value="prise_sang">Visite médicale</option>
                    <option value="renouvellement_ordonnance">Renouvellement d'ordonnance</option>
                    <option value="soins_domicile">Soins à domicile</option>
                </select> 
            </div>
            <table>
                <tr>
                    <td>            
                        <div class="form-group">
                            <div class="form-check">
                                <label  for="activite">Activité pendant prestation</label><br />
                                <label class="form-check-label"><input type="checkbox" name="activite" class="form-check-input" value="Prise de sang">Prise de sang</label><br />
                                <label class="form-check-label"><input class="form-check-input" type="checkbox" name="activite" value="Contrôle de la tension">Contrôle de la tension</label>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class='form-check'>
                                <label for='materiel'>Matériel nécessaire </label><br />
                                <label class="form-check-label"><input type="checkbox" class="form-check-input" name="materiel[]" value="Stethoscope"/>Stethoscope</label><br />
                                <label class="form-check-label"><input type="checkbox" class="form-check-input" name="materiel[]" value="Tensiometre"/>Tensiomètre</label><br />
                            </div>
                        </div>  
                    </td>
                </tr>
            </table>
            <div class="form-group">
                <label for="moyenPaiement">Moyen de paiement</label>
                <select class="form-control" name="moyenPaiement">
                    <option value="Carte Bancaire">Carte bancaire</option>
                    <option value="Cheque">Chèque</option>
                    <option value="Espece">Espèce</option>
                </select>
            </div>
        <label>Prix HT : .. €</label>
            <br/>
            <input type="submit" value="Valider"/>
        </form>
        
    </div> 
        <div class='col-md-4'>
            <div class="card">
                <h3>Informations client</h3>
                <form action="" method="POST">
                    <div class="form-group">
                        <label for="choixClient">Selectionner un client ( si aucun client déjà selectionner )</label>
                        <select name="choixClient" id="choixClient" class="form-control">
                            <option value="John_Doe">John Doe</option>
                            <option value="James">James</option>
                        </select>
                        <a href="index.html">Le client n'existe pas</a>
                    </div>
                </form>
                <div class="card-body">Nom : <br /> Prénom : <br /> Adresse :  <br />Numéro de téléphone :     </div>
            </div>
        </div>
{% endblock %}